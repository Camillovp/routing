<h2>List of tasks</h2>

<%= link_to 'Create new task', tasks_new_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, tasks_path(task) %>
      <small>
        <%= link_to 'Delete', tasks_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
      </small>
    </li>
  <% end %>
</ul>
